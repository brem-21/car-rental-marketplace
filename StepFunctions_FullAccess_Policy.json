{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "s3:*",
        "glue:*",
        "elasticmapreduce:*",
        "iam:PassRole"
      ],
      "Resource": "*",
      "Condition": {
        "StringEquals": {
          "iam:PassedToService": [
            "elasticmapreduce.amazonaws.com",
            "glue.amazonaws.com"
          ]
        }
      }
    }
  ]
}
